<link rel="stylesheet" href="/css/cssfile.css">

<div class="logo">
  <a href='/'>
    <img src="/img/logo.png">
  </a>
</div>

<div class="top_right_buttons">
  <form action='/sessions' method="post">
    <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Logout"/>
  </form>
</div>

<div class="listing_buttons">
  <form action='/listings' method='get'>
      <input type="submit" value="View Listings"/>
  </form>

  <form action='/listings/new' method="get">
    <input type="submit" value="Add new listing">
  </form>
</div>

<% flash.keys.each do |type| %>
  <div data-alert class="flash <%= type %> alert-box radius">
    <%= flash[type] %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>

<div class="welcome">
  <h1>Your Requests</h1>
</div>

<% @listings.each do |listing| %>
  <a href="/listings/<%= listing.id %>">
    <section class="space">
      <div class="image">
        <img src="/img/apartment.jpg">
      </div>
      <div class="listing_details">
        <h1><%= Listings.click(id: listing.listing_id)[0].name %></h1>
        <h2>Guest: <%= User.user_find(listing.booker_id).email%></h2>
      </div>
      <div class="listing_price">
        <h3>Total: Â£<%= '%.2f' % (Listings.click(id: listing.listing_id)[0].price.to_f * (DateTime.parse(listing.check_out) - DateTime.parse(listing.check_in)).to_i).round(2)%></h3>
      </div>
      <div class='listing_details_small'>
        <h5><%= Listings.click(id: listing.listing_id)[0].location %></h5>
        <h4>Check in: <%= listing.check_in %>, Check out: <%= listing.check_out %></h4>
      </div>
    </section></a>

<% end %>
